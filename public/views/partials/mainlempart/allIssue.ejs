<div class="mt-8">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Daftar Isu Donasi</h2>
        <a href="/lembaga/galangDana" class="bg-primary hover:bg-dark text-white px-4 py-2 rounded-lg font-medium transition-all hover:scale-105 shadow-md text-sm">
            <i class="fas fa-plus mr-2"></i>Buat Isu Baru
        </a>
    </div>
<% if (issues.length == 0) { %>
    <!-- Empty State -->
            <div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden">
                <div class="p-12 text-center">
                    <!-- Empty Icon -->
                    <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
                        <i class="fas fa-inbox text-4xl text-gray-400"></i>
                    </div>
                    
                    <!-- Empty State Content -->
                    <div class="max-w-md mx-auto">
                        <h3 class="text-xl font-semibold text-gray-900 mb-3">Anda Belum Memiliki Isu Donasi</h3>
                        <p class="text-gray-500 text-sm mb-6 leading-relaxed">
                            Saat ini belum ada isu donasi yang anda buat. Segera menggalang dana untuk membantu orang-orang yang membutuhkan bantuan.
                        </p>
                        
                        <!-- Action Buttons -->
                        <div class="flex flex-col sm:flex-row gap-3 justify-center">
                            <a href="/lembaga/galangDana" class="bg-primary hover:bg-dark text-white px-6 py-3 rounded-lg font-medium transition-all hover:scale-105 shadow-md flex items-center justify-center">
                                <i class="fas fa-plus mr-2"></i>Buat Isu Donasi
                            </a>
                        </div>
                    </div>
                    
                    <!-- Decorative Elements -->
                    <div class="mt-8 pt-8 border-t border-gray-100">
                        <div class="flex justify-center space-x-8 text-xs text-gray-400">
                            <div class="flex items-center">
                                <i class="fas fa-heart mr-2 text-red-300"></i>
                                <span>Bantuan Kemanusiaan</span>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-graduation-cap mr-2 text-blue-300"></i>
                                <span>Pendidikan</span>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-seedling mr-2 text-green-300"></i>
                                <span>Lingkungan</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
<% } else { %>
    <% issues.forEach(function(item) { %>
            <div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden hover:shadow-xl transition-all duration-300 mb-8">
                <div class="p-6">
                    <div class="mb-6">
                        <div class="flex items-start justify-start flex-col mb-4">
                            <h3 class="text-xl font-bold text-gray-900 mb-2"><%= item.nama_issue %></h3>
                            <p class="text-gray-600 text-sm leading-relaxed"><%= item.deskripsi %></p>
                        </div>
                    </div>

                    <div class="space-y-3">
                        <div class="flex justify-between items-center">
                            <div>
                                <p class="text-sm font-medium text-gray-700">Terkumpul</p>
                                <p class="text-2xl font-bold text-primary">Rp <%= item.terkumpul || 0 %></p>
                            </div>
                            <div class="text-right">
                                <p class="text-sm text-gray-500">Target</p>
                                <p class="text-lg font-semibold text-gray-700">Rp <%= item.target %></p>
                            </div>
                        </div>
                    </div>

                    <div class="relative pb-6">
                        <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
                            <div class="bg-gradient-to-r from-primary to-secondary h-full rounded-full transition-all duration-500 ease-out" style="width: <%= item.progress || 0 %>%"></div>
                        </div>
                        <div class="absolute right-0 bottom-0">
                            <span class="text-xs font-medium text-primary bg-primary/10 px-2 py-1 rounded-full"><%= item.progress || 0 %>%</span>
                        </div>
                    </div>

                    <div class="flex flex-col lg:flex-row lg:justify-between items-center pt-2">
                        <div class="flex items-center space-x-4 text-sm text-gray-500">
                            <span class="flex items-center">
                                <i class="fas fa-users mr-1"></i>
                                <%= item.jumlahDonatur %> donatur
                            </span>
                            <span class="flex items-center">
                                <i class="fas fa-clock mr-1"></i>
                                <%= item.hariTersisa %> hari tersisa
                            </span>
                        </div>
                        <a href="/lembaga/<%= item.id_issue %>" class="bg-primary hover:bg-dark text-white px-6 py-2 rounded-lg font-medium transition-all hover:scale-105 shadow-md">
                            <i class="fas fa-hand-holding-heart mr-2"></i>Lihat Selengkapnya
                        </a>
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
<% } %>