<div class="border-b border-gray-200 py-4 mb-6">
  <h1 class="text-center text-2xl font-semibold text-gray-800">Inbox</h1>
</div>

<section class="max-w-4xl mx-auto px-4">
  <% inboxMessages.forEach((msg) => { %>
  <a href="/u/<%= user.id %>/a/inbox/<%= msg.id %>" class="block mb-4">
    <div
      class="p-4 rounded-lg shadow-md bg-white hover:bg-gray-50 transition duration-200 flex justify-between items-start"
    >
      <div>
        <h2
          class="text-lg font-semibold <%= msg.read ? 'text-gray-700' : 'text-blue-600' %>"
        >
          <%= msg.subject %>
        </h2>
        <p class="text-sm text-gray-500">
          Dari: <%= msg.sender %> â€” <%= msg.preview %>
        </p>
      </div>
      <div class="text-sm text-gray-400"><%= msg.date %></div>
    </div>
  </a>
  <% }) %> <% if (inboxMessages.length === 0) { %>
  <div class="bg-white rounded-xl shadow-md p-6 text-center">
    <img
      src="/images/empty-inbox.png"
      alt="Empty Inbox"
      class="mx-auto w-40 md:w-52 mb-6"
    />
    <p class="text-gray-600 mb-4">Belum ada pesan di inbox kamu.</p>
    <a
      href="/"
      class="inline-block bg-blue-500 hover:bg-blue-600 text-white font-semibold px-6 py-3 rounded-full transition"
    >
      Kembali ke Beranda
    </a>
  </div>
  <% } %>
</section>
