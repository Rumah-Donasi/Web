    <section class="w-full lg:w-1/2 relative overflow-hidden p-0">
        <!-- Full Background Image -->
        <img src="/images/pegangan2.jpg" alt="Helping hands together" class="absolute inset-0 w-full h-full object-cover z-0 rounded-r-2xl"/>

        <!-- Caption / Box Text -->
        <div class="absolute bottom-8 left-8 right-8 z-20">
