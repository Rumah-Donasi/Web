<a
  href="/q/<%= issue.id_issue || '#' %>"
  class="rounded-xl overflow-hidden shadow-lg border bg-white <%= link ? '' : 'pointer-events-none cursor-not-allowed opacity-50' %>"
>
  <!-- Gambar dengan rasio 4:3 -->
  <div class="w-full aspect-[16/9]">
    <img
      src="<%= issue.thumbnail || '/images/default-isu-img.svg' %>"
      alt="Campaign"
      class="w-full h-full object-cover"
    />
  </div>

  <div class="p-4">
    <div class="flex items-center space-x-2 text-sm text-gray-500">
      <span><%= issue.pembuat || 'Nama Penggalang' %></span>
    </div>
    <h2 class="mt-1 text-gray-900 font-semibold text-base">
      <%= issue.nama_issue || 'Judul Donasi' %>
    </h2>
    <div class="mt-3">
      <span class="text-sm text-gray-500">Terkumpul</span>
      <span class="text-primary font-semibold">Rp. <%= issue.terkumpul || '0' %></span>
    </div>
    <div class="w-full bg-gray-200 rounded-full h-1.5 mt-3">
      <div
        class="bg-secondary h-1.5 rounded-full"
        style="width: <%= Number(issue.progress || 0) + '%' %>"
      ></div>
    </div>
  </div>
</a>
