<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Portal Masuk</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="min-h-screen bg-white" style="background: linear-gradient(135deg, #3B9E8C 0%, #5FCFBA 50%, #3B9E8C 100%);">
    <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            <!-- Header -->
            <div class="text-center">
                <div class="mx-auto h-20 w-20 rounded-full flex items-center justify-center shadow-lg" style="background-color: #DDF8F3;">
                    <i class="fas fa-lock text-3xl" style="color: #3B9E8C;"></i>
                </div>
                <h2 class="mt-6 text-center text-3xl font-bold text-white">
                    Masuk ke Akun Anda
                </h2>
                <p class="mt-2 text-center text-sm text-white/80">
                    Atau 
                    <a href="#" class="font-medium hover:underline transition-all" style="color: #A9F1E3;">
                        daftar akun baru
                    </a>
                </p>
            </div>

            <!-- Login Form -->
            <div class="rounded-2xl shadow-2xl p-8 border" style="background: rgba(223, 248, 243, 0.1); backdrop-filter: blur(16px); border-color: rgba(95, 207, 186, 0.3);">
                <form class="space-y-6" action="/login" method="POST">
                    <!-- Email Field -->
                    <div>
                        <label for="email" class="block text-sm font-medium text-white mb-2">
                            <i class="fas fa-envelope mr-2"></i>Email
                        </label>
                        <input 
                            id="email" 
                            name="email" 
                            type="email" 
                            required 
                            class="appearance-none relative block w-full px-4 py-3 placeholder-white/70 text-white rounded-lg focus:outline-none focus:ring-2 transition-all"
                            style="background: rgba(95, 207, 186, 0.15); border: 1px solid rgba(169, 241, 227, 0.3); --tw-ring-color: #5FCFBA;"
                            placeholder="Masukkan email Anda"
                        >
                    </div>

                    <!-- Password Field -->
                    <div>
                        <label for="password" class="block text-sm font-medium text-white mb-2">
                            <i class="fas fa-lock mr-2"></i>Password
                        </label>
                        <div class="relative">
                            <input 
                                id="password" 
                                name="password" 
                                type="password" 
                                required 
                                class="appearance-none relative block w-full px-4 py-3 placeholder-white/70 text-white rounded-lg focus:outline-none focus:ring-2 transition-all pr-12"
                                style="background: rgba(95, 207, 186, 0.15); border: 1px solid rgba(169, 241, 227, 0.3); --tw-ring-color: #5FCFBA;"
                                placeholder="Masukkan password Anda"
                            >
                            <button 
                                type="button" 
                                onclick="togglePassword()"
                                class="absolute inset-y-0 right-0 pr-4 flex items-center text-white/70 hover:text-white transition-colors"
                            >
                                <i id="password-icon" class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Remember Me & Forgot Password -->
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input 
                                id="remember-me" 
                                name="remember-me" 
                                type="checkbox" 
                                class="h-4 w-4 rounded focus:ring-2"
                                style="color: #5FCFBA; --tw-ring-color: #5FCFBA; background: rgba(95, 207, 186, 0.1); border-color: #A9F1E3;"
                            >
                            <label for="remember-me" class="ml-2 block text-sm text-white">
                                Ingat saya
                            </label>
                        </div>
                        <div class="text-sm">
                            <a href="#" class="font-medium hover:underline transition-all" style="color: #A9F1E3;">
                                Lupa password?
                            </a>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div>
                        <button 
                            type="submit" 
                            class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white focus:outline-none focus:ring-2 transition-all transform hover:scale-105 shadow-lg"
                            style="background: linear-gradient(135deg, #5FCFBA 0%, #3B9E8C 100%); --tw-ring-color: #5FCFBA;"
                            onmouseover="this.style.background='linear-gradient(135deg, #3B9E8C 0%, #5FCFBA 100%)'"
                            onmouseout="this.style.background='linear-gradient(135deg, #5FCFBA 0%, #3B9E8C 100%)'"
                        >
                            <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                                <i class="fas fa-sign-in-alt text-white/80 group-hover:text-white"></i>
                            </span>
                            Masuk
                        </button>
                    </div>

                    <!-- Divider -->
                    <div class="relative my-6">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t" style="border-color: rgba(169, 241, 227, 0.3);"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-2 bg-transparent text-white/90">Atau masuk dengan</span>
                        </div>
                    </div>

                    <!-- Social Login -->
                    <div class="grid grid-cols-2 gap-3">
                        <button 
                            type="button"
                            class="w-full inline-flex justify-center py-2 px-4 rounded-lg shadow-sm text-sm font-medium text-white hover:scale-105 transition-all"
                            style="background: rgba(223, 248, 243, 0.15); border: 1px solid rgba(169, 241, 227, 0.3);"
                            onmouseover="this.style.background='rgba(95, 207, 186, 0.2)'"
                            onmouseout="this.style.background='rgba(223, 248, 243, 0.15)'"
                        >
                            <i class="fab fa-google text-red-400 mr-2"></i>
                            Google
                        </button>
                        <button 
                            type="button"
                            class="w-full inline-flex justify-center py-2 px-4 rounded-lg shadow-sm text-sm font-medium text-white hover:scale-105 transition-all"
                            style="background: rgba(223, 248, 243, 0.15); border: 1px solid rgba(169, 241, 227, 0.3);"
                            onmouseover="this.style.background='rgba(95, 207, 186, 0.2)'"
                            onmouseout="this.style.background='rgba(223, 248, 243, 0.15)'"
                        >
                            <i class="fab fa-facebook text-blue-400 mr-2"></i>
                            Facebook
                        </button>
                    </div>
                </form>

                <!-- Error Message (EJS Template) -->
                <% if (typeof error !== 'undefined' && error) { %>
                <div class="mt-4 px-4 py-3 rounded-lg" style="background: rgba(239, 68, 68, 0.15); border: 1px solid rgba(239, 68, 68, 0.3); color: #fca5a5;">
                    <div class="flex items-center">
                        <i class="fas fa-exclamation-triangle mr-2"></i>
                        <span><%= error %></span>
                    </div>
                </div>
                <% } %>

                <!-- Success Message (EJS Template) -->
                <% if (typeof success !== 'undefined' && success) { %>
                <div class="mt-4 px-4 py-3 rounded-lg" style="background: rgba(95, 207, 186, 0.15); border: 1px solid #5FCFBA; color: #A9F1E3;">
                    <div class="flex items-center">
                        <i class="fas fa-check-circle mr-2"></i>
                        <span><%= success %></span>
                    </div>
                </div>
                <% } %>
            </div>

            <!-- Footer -->
            <div class="text-center">
                <p class="text-sm text-white/60">
                    Â© 2025 Portal Masuk. Semua hak dilindungi.
                </p>
            </div>
        </div>
    </div>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const passwordIcon = document.getElementById('password-icon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                passwordIcon.classList.remove('fa-eye');
                passwordIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                passwordIcon.classList.remove('fa-eye-slash');
                passwordIcon.classList.add('fa-eye');
            }
        }

        // Form validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            
            if (!email || !password) {
                e.preventDefault();
                alert('Mohon lengkapi semua field');
                return;
            }
            
            if (password.length < 6) {
                e.preventDefault();
                alert('Password minimal 6 karakter');
                return;
            }
        });

        // Smooth animations
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('.bg-white\\/10');
            form.style.transform = 'translateY(20px)';
            form.style.opacity = '0';
            
            setTimeout(() => {
                form.style.transition = 'all 0.6s ease-out';
                form.style.transform = 'translateY(0)';
                form.style.opacity = '1';
            }, 100);
        });
    </script>
</body>
</html>