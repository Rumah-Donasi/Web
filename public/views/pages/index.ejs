        '65', }); %>
      </div>
    </section>

    <!-- Campaign Pilihan -->
    <section
      class="bg-secondary py-10 px-6 md:px-16 rounded-xl mx-4 sm:mx-20 lg:mx-40 mt-12"
    >
      <h1 class="text-2xl font-semibold mb-6">Campaign Pilihan</h1>
      <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-6">
