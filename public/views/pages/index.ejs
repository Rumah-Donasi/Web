<!DOCTYPE html>
<html lang="id">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="bg-gray-50 text-gray-800">
    <!-- Navbar -->
    <header><%- include('../partials/navbar'); %></header>

    <main class="mt-32 max-w-screen-xl mx-auto px-4">
      <!-- Swiper Section -->
      <section class="swiper rounded-xl overflow-hidden">
        <div class="swiper-wrapper"><%- include('../partials/swiper'); %></div>
        <div class="swiper-pagination mt-4"></div>
      </section>
    </main>

    <section
      class="container mx-auto px-4 py-12 grid grid-cols-2 sm:grid-cols-2 md:grid-cols-4 gap-6"
    >
      <%- include('../partials/menu', { text: 'Bencana Alam', image: 'bencana'
      }) %>
      <!-- Bencana -->
      <%- include('../partials/menu', { text: 'Bantuan Sosial', image: 'sosial'
      }) %>
      <!-- Sosial -->
      <%- include('../partials/menu', { text: 'Bantuan Medis', image: 'medis' })
      %>
      <!-- Medis -->
      <%- include('../partials/menu', { text: 'Lingkungan', image: 'lingkungan'
      }) %>
      <!-- Lingkungan -->
    </section>

    <section class="bg-gray-200 py-10 px-6 md:px-16 rounded-xl mx-4 md:mx-40">
      <h1 class="text-2xl font-semibold mb-6">Kebutuhan Mendesak</h1>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <%- include('../partials/card.ejs'); %> <%-
        include('../partials/card.ejs'); %> <%- include('../partials/card.ejs');
        %> <%- include('../partials/card.ejs'); %>
      </div>
    </section>

    <!-- SwiperJS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

    <!-- Init Swiper and Menu Toggle -->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        new Swiper(".swiper", {
          loop: true,
          autoplay: {
            delay: 5000,
            disableOnInteraction: false,
          },
          pagination: {
            el: ".swiper-pagination",
            clickable: true,
          },
        });

        const toggleBtn = document.getElementById("menu-toggle");
        const mobileMenu = document.getElementById("mobile-menu");

        if (toggleBtn && mobileMenu) {
          toggleBtn.addEventListener("click", () => {
            mobileMenu.classList.toggle("hidden");
          });
        }
      });
    </script>
  </body>
</html>
